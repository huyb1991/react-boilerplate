{
  "parser": "babel-eslint",
  "extends": "airbnb",
  "env": {
    "browser": true,
    "node": true,
    "jest": true,
    "es6": true
  },
  "plugins": [
    "react",
    "jsx-a11y"
  ],
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
      "semi": ["error", "never"],
      "quotes": ["error", "single"],
      "linebreak-style": 0,
      "react/jsx-filename-extension": 0,
      "comma-dangle": [
        2,
        "always-multiline"
      ]
  }
}
